.answer-container.bubble-top.tab-pane{id: "#{last_name_from_answer(candidate_answer).downcase}", class: (index==0) ? "active bubble#{index}" : "bubble#{index}"}
  %p{class: "#{last_name_from_answer(candidate_answer).downcase}"}
    %strong= "#{candidate_answer.candidate_name}:"
    = candidate_answer.body
  = facebook_button(candidate_answer, true)
  - unless @hide_see_comments

    .comment-count
      -comments_count = candidate_answer.question.comments_count
      - if comments_count == 0
        -comment_text = Comment on this question
      -else
        -comment_text = 'See '+ pluralize( comments_count, 'comment')

    = link_to comment_text, question_path(candidate_answer.question), { class: "pull-right comments" }
  %br/
