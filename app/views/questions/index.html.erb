<div id="question-index" class="tan all-questions-bg">
  <div class="container">
    <div class="placeholder"></div>
    <div class="row-fluid">
    <h4 class="span6">All the questions you've asked so far:</h4>
    <a href="#ask-modal" role="button" class="btn btn-ask btn-large span3 pull-right" data-toggle="modal">
      Ask a Question
    </a>
  </div>
    <br>
    <div class="all-questions">
      <div class="row-fluid">
        <div class="navbar">
          <div class="navbar-inner">
            <div class="container">
              <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="brand">Sort questions by:</a>
              <div class="nav-collapse collapse">
                <ul class="nav">
                  <li class=""><a href="?filter=answered">Answered</a></li>
                  <li><a href="?filter=top">Top</a></li>
                  <li><a href="?filter=all">All</a></li>
                </ul>
                <form class="navbar-search pull-right">
                  <%= hidden_field_tag :filter, params[:filter] %>
                  <%= search_field_tag :q, params[:q], class: "search-query", placeholder: "Search" %>
                </form>
              </div><!--/.nav-collapse -->
            </div>
          </div>
        </div>
      </div>

      <div class="box">
        <%= render partial: 'question', collection: @questions %>
        <% @questions.each do |question| %>
          <%= render 'question', question: question %>
        <% end %>
      </div>
      <%= paginate @questions %>
    </div>
  </div>
</div>
